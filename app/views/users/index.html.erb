<!DOCTYPE html>
<html lang="ja">
    <head>
        <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
    </head>
    <body>
      <header>
        <nav>
          <div>
            <%= link_to 'revenge_cpt', logout_path %>
          </div>
          <div>
            <% if current_user %>
              <%= link_to 'ログアウト', logout_path, method: :delete %>
            <% elsif %>
              <%= link_to 'ログイン', login_path %>
            <% end %>
          </div>
        </nav>
      </header>
      <div id="app">
        <div class="task-groups">
          <div class="task-group-one-week">
            <button @click="switchComponent(0)">one week<section>10</section></button>
          </div>
          <div class="task-group-one-month">
            <button @click="switchComponent(1)">one month<section>10</section></button>
          </div>
          <div class="task-group-half-a-year">
            <button @click="switchComponent(2)">half a year<section>10</section</button>
          </div>
          <div class="task-group-today-ac">
            <button>today AC<section>10/100</section</button>
          </div>
        </div>
        <confirm-url-component></confirm-url-component> 
        <div>
          <div>
            <table-component key="one~week" v-if="show_component[0]" :solved_status="0" :x_days_ago="30" ></table-component>
            <table-component key="one-month" v-else-if="show_component[1]" :solved_status="1" :x_days_ago="30" ></table-component>
            <table-component key="half-a-year" v-else-if="show_component[2]" :solved_status="2" :x_days_ago="30"></table-component>
          </div>
        </div>
      </div>
        <style>
            table {width: 500px; border-collapse:collapse }
            tr {border: solid 1px black;}
            td {text-align: center;}
        </style>
    </body>
</html>
