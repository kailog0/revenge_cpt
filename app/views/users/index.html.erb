        <script>
          Vue.component('table-component', {
              data: function() {
                return {tasks: []}
              },
            template: '\
              <table>\
                 <tr><th>No.</th><th>task</th><th></th></tr>\
                 <tr v-for="(task, index) in tasks" :key="task.id">\
