                 </tr>\
              </table>',
            methods: {
              delete_task: function(task_id) {
                console.log(task_id)
              },
              get_tasks: function() {
                self = this
                axios
                  .get("http://localhost:3000/tasks")
                  .then(function(response) {
                    self.tasks = response.data.tasks
                  })
              },
            },
            mounted: function() {
              this.get_tasks()
            },
          })
let s =             new Vue({
